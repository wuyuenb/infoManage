<?xml version="1.0" encoding="UTF-8"?>
<!--        debug="false" true -->
<configuration  scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <!--    <property name="log.path" value="/data01/logs/welink" />-->
    <property name="log.path" value="E:/jtest/log" />
    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!-- <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
             <level>ERROR</level>
         </filter>-->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logback.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>

    <!-- logback为java中的包 -->
    <logger name="com.hunau.myuser.controller"/>
    <!--logback.LogbackDemo：类的全路径 LEVEL：选项TRACE, DEBUG, INFO, WARN, ERROR, FATAL, OFF-->
    <logger name="com.hunau.myuser.controller.UserController" level="DEBUG" additivity="false">
        <appender-ref ref="console"/>
    </logger>
    <logger name="com.hunau.myuser.controller.UserController" level="DEBUG" />

    <!--myibatis log configure-->
    <!-- show sql -->
    <logger name="com.hunau.userlogin.dao.UserDao" level="DEBUG"/>
</configuration>
